# Configuration for public access via cloud.together.ai domain
# This file is optimized for HTTP access from public URLs

# Multi-user authentication settings
LANGFLOW_AUTO_LOGIN=false
LANGFLOW_NEW_USER_IS_ACTIVE=false
LANGFLOW_STORE_ENVIRONMENT_VARIABLES=true

# Cookie settings optimized for public HTTP access
# Using 'lax' for better compatibility with HTTP
LANGFLOW_ACCESS_SAME_SITE=lax
LANGFLOW_ACCESS_SECURE=true
LANGFLOW_ACCESS_HTTPONLY=false
LANGFLOW_REFRESH_SAME_SITE=lax
LANGFLOW_REFRESH_SECURE=true
LANGFLOW_REFRESH_HTTPONLY=false

# Session settings
LANGFLOW_ACCESS_TOKEN_EXPIRE_SECONDS=3600
LANGFLOW_REFRESH_TOKEN_EXPIRE_SECONDS=604800

# Optional: Increase worker timeout for slower connections
LANGFLOW_WORKER_TIMEOUT=300
LANGFLOW_FRONTEND_TIMEOUT=60
